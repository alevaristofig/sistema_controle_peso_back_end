package com.sistemacontrolepeso.domain.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.sistemacontrolepeso.domain.model.PessoaExercicio;

public interface PessoaExercicioRepository extends JpaRepository<PessoaExercicio, Long> {

	/*@Query("select SUM(pe.exercicio_id) AS quantidade, pe.exercicio_id, e.nome from PessoaExercicio pe "
			+ "inner join pe.exercicio_id e"
			+ "where pe.treino = :treino"
			+ "group by pe.exercicio_id")
	@Query(value = "select COUNT(exercicio_id) AS quantidade from pessoa_exercicio "
			+ "group by exercicio_id", nativeQuery = true)
	@Query("select pe.exercicio, count(pe) AS quantidade, pe.exercicio from PessoaExercicio pe "
			+ "where pe.treino= :treino "
			+ "GROUP BY pe.exercicio")*/
	@Query(value = "select SUM(pe.exercicio_id) AS quantidade, pe.exercicio_id, e.nome from pessoa_exercicio pe "
			+ "inner join pe.exercicio_id e"
			+ "where pe.treino = :treino"
			+ "group by pe.exercicio_id", nativeQuery = true)
	public List<Object[]> listarQuantidadeTreinos(@Param("treino") char treino);
}
