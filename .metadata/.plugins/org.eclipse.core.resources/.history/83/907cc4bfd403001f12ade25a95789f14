package com.sistemacontrolepeso.core.security.authorizationserver;

import java.util.Collection;

import org.springframework.security.core.GrantedAuthority;
import org.springframework.security.core.userdetails.User;

import com.sistemacontrolepeso.domain.model.Pessoa;

import lombok.Getter;

@Getter
public class AuthPessoa extends User {
	private static final long serialVersionUID = 1L;
	
	private Long userId;
	private String fullName;
	
	public AuthPessoa(String username, String password, Collection<? extends GrantedAuthority> authorities, Long userId,
			String fullName) {
		
		super(username, password, authorities);
		this.userId = userId;
		this.fullName = fullName;
	}
	
	
}
