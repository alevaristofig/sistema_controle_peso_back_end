version: "3.9"

networks:
  controlepeso-network:
    driver: bridge	
    
services:
  controlepeso-mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: rootpesquisa
    ports:
      - "3306:3306"
    networks:
      - controlepeso-network  
      
  sistemacontrolepeso-redis:
    image: redis:7.2.5-alpine
    networks:
      - controlepeso-network
          
  sistemacontrolepeso-api:
    image: sistemacontrolepeso-api
    command: [ "/wait-for-it.sh", "controlepeso-mysql:3306", "-t", "30", "--", "java", "-jar", "api.jar" ]
    environment:
      DB_HOST: controlepeso-mysql
    ports:
      - "8080:8080"
    networks:
      - controlepeso-network
    depends_on:
      - controlepeso-mysql       
          