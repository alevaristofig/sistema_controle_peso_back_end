import org.junit.jupiter.api.BeforeAll;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.TestPropertySource;
import org.springframework.test.web.servlet.MockMvc;
import org.springframework.test.web.servlet.MockMvcBuilder;
import org.springframework.test.web.servlet.setup.MockMvcBuilders;

public class PessoaController extends SistemaControlePesoApplicationTests {

	private MockMvc mockMvc;
	
	@Autowired
	private com.sistemacontrolepeso.api.controller.PessoaController pessoaController;
	
	@BeforeAll
	public void setUp() {
		this.mockMvc = MockMvcBuilders.standaloneSetup(pessoaController).build();
	}
}
