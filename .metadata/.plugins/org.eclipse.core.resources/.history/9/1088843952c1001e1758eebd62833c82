package com.sistemacontrolepeso.api.assembler;

import org.modelmapper.ModelMapper;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.sistemacontrolepeso.api.model.input.PessoaInput;
import com.sistemacontrolepeso.domain.model.Peso;

@Component
public class PesoInputDisassembler {

	@Autowired
	private ModelMapper modelMapper;
	
	public Peso toDomainObject(PessoaInput pessoaInput) {
		return modelMapper.map(pessoaInput, Peso.class);
	}
}
