package com.sistemacontrolepeso.model;

import java.time.OffsetDateTime;

import com.sistemacontrolepeso.api.model.PesoModel;
import com.sistemacontrolepeso.api.model.input.PesoInput;
import com.sistemacontrolepeso.api.model.input.PessoaIdInput;
import com.sistemacontrolepeso.domain.model.Peso;

public class PesoTestData {

	private PesoTestData() {}
	
	public static Peso umNovoPeso() {
		Peso peso = new Peso();
		
		peso.setId(1L);
		peso.setValor(99);
		peso.setImc(34.67);
		peso.setDataCadastro(OffsetDateTime.now());
		peso.setDataAtualizacao(null);
		peso.setPessoa(PessoaTestData.umaNovaPessoa());
		
		return peso;
	}
	
	public static PesoInput umNovoPesoInput() {
		PesoInput pesoInput = new PesoInput();		
		PessoaIdInput pessoaIdInput = PessoaTestData.umaNovaPessoaIdInput();
				
		pesoInput.setValor(99);
		pesoInput.setImc(34.67);
		pesoInput.setDataCadastro(OffsetDateTime.now());
		pesoInput.setPessoa(pessoaIdInput);
		
		return pesoInput;
	}
	
	public static PesoModel umNovoPesoModel() {
		PesoModel pesoModel = new PesoModel();
		
		//pesoModel.setId(1L);
		pesoModel.setValor(99);
		pesoModel.setImc(34.67);
		pesoModel.setPessoa(PessoaTestData.umaNovaPessoaModel());
		pesoModel.setDataCadastro(OffsetDateTime.now());
		pesoModel.setDataAtualizacao(OffsetDateTime.now());
		
		return pesoModel;
	}
}
